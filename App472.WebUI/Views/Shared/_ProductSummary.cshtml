@model App472.WebUI.Domain.Entities.InStockProduct

<div class="card" style="margin-top:0px; margin-bottom:10px;">
    <div class="card-body">
        <h3 class="card-title">
            @Model.Name @Model.Price.ToString("c")
        </h3>
        @using (Html.BeginForm("AddToCart", "Cart")){
            <div style="text-align:right; float:right;">
                @Html.Hidden("inStockProductId", Model.ID)
                @Html.Hidden("returnUrl", Request.Url.LocalPath)
                <input type="submit" class="btn btn-success" value="Add to cart" />
            </div>
        }
        <p class="card-text">@Model.Description</p>
    </div>
</div>