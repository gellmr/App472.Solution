@model App472.WebUI.Models.AdminEditProductViewModel
@{
    ViewBag.Title = "Admin: Edit" + Model.Product.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card text-center">

    <div class="card-body">
        <h3 class="card-title">Edit: @Model.Product.Name</h3>
    </div>

    @using (Html.BeginForm("Edit", "AdminProducts", FormMethod.Post, new { id = "myform" }))
    {
        <div id="AdminEditProductValidationSummary">
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(m => m.Product.ID)

        <div class="card-body">
            <div class="form-group">
                <label class="mgProductEdit">Product Name:</label>
                @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control mgProductEdit" })
            </div>
            <div class="form-group">
                <label class="mgProductEdit">Product Category:</label>
                @Html.TextBoxFor(m => m.Product.Category, new { @class = "form-control mgProductEdit" })
            </div>
            <div class="form-group">
                <label class="mgProductEdit">Description:</label>
                @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control mgProductEdit" })
            </div>
            <div class="form-group">
                <label class="mgProductEdit">Unit Price:</label>
                @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control mgProductEdit" })
            </div>
            <div class="text-center">
                @Html.ActionLink("Cancel and return to List", "Index", null, new
                {
                    @class = "btn btn-warning"
                })
                <input type="submit" value="Save" class="btn btn-success" style="min-width:130px;" />
            </div>
        </div>
    }
</div>