@model App472.WebUI.Models.CheckoutIndexViewModel

<h2>Check Out:</h2>
<p>Please enter your details, and we'll ship your goods right away.</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <hr />
    <h3>Ship to...</h3>
    <div class="form-group">
        <label>First Name:</label>
        @Html.TextBoxFor(x => x.ShippingDetails.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        @Html.TextBoxFor(x => x.ShippingDetails.LastName, new { @class = "form-control" })
    </div>
    <h3>Address</h3>

    ViewBag.PartialPrefixName="ShippingDetails"; // help the view name its form elements.
    @*Use model meta data to generate the common string inputs *@
    @Html.Partial("ShippingDetails", Model.ShippingDetails);

    <h3>Your Email Address</h3>
    <div class="form-group">
        @Html.TextBoxFor(x => x.ShippingDetails.Email, new { @class = "form-control" })
    </div>

    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.ShippingDetails.GiftWrap)
            Gift wrap these items
        </label>
    </div>
    <br />

    <div class="text-center" style="margin-bottom:15px;">
        <input class="btn btn-success" type="submit" value="Complete order" />
    </div>
}