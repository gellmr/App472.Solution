@model App472.WebUI.Models.CheckoutButtonViewModel

<div style="
    /*background-color:darkseagreen;*/
    /*border:solid 3px green;*/
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-end;">

    <div style="display:inline-block;padding:8px; color:#aeaeae;">
        <b>Your cart:</b>
        @Model.Cart.Lines.Sum(x => x.Quantity) item(s),
        @Model.Cart.ComputeTotalValue().ToString("c")
    </div>

    <div class="float-right" style="display:inline-block; width:114px;">
        @{ string actionName = (Model.CheckoutButtonBackText == "Cart") ? "Index" : "Checkout"; }
        <a class="btn btn-success" style="width:100%;" href="@Url.Action(actionName, "Cart", new { returnUrl = Request.Url.PathAndQuery })"><i class="bi bi-cart4"></i> @Model.CheckoutButtonBackText</a>
    </div>
</div>